<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/card_rounded"
        android:backgroundTint="@color/colorCard"
        android:gravity="start"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/shop_increase5_img"
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/a5" />

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/shop_increase5_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Increase maximum tasks to 5."
                android:textColor="#000000"
                android:textSize="18sp"
                android:typeface="normal" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/shop_increase5_btn"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/colorAccent"
                    android:text="Buy"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="206dp"
                    android:layout_height="17dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="30"
                    android:textColor="#FD000000" />

                <ImageView
                    android:id="@+id/imagePoints3"
                    android:layout_width="41dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:elevation="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/points" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/card_rounded"
        android:backgroundTint="@color/colorCard"
        android:gravity="start"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/shop_increase7_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/a7" />

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/shop_increase7_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Increase maximum tasks to 7."
                android:textColor="#000000"
                android:textSize="18sp"
                android:typeface="normal" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/shop_increase7_btn"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/colorAccent"
                    android:text="Buy"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="206dp"
                    android:layout_height="17dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="50"
                    android:textColor="#FD000000" />

                <ImageView
                    android:id="@+id/imagePoints5"
                    android:layout_width="41dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:elevation="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/points" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/card_rounded"
        android:backgroundTint="@color/colorCard"
        android:gravity="start"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/shop_increase10_img"
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/a10" />

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/shop_increase10_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Increase maximum tasks to 10."
                android:textColor="#000000"
                android:textSize="18sp"
                android:typeface="normal" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/shop_increase10_btn"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/colorAccent"
                    android:text="Buy"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="206dp"
                    android:layout_height="17dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="100"
                    android:textColor="#FD000000" />

                <ImageView
                    android:id="@+id/imagePoints6"
                    android:layout_width="41dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:elevation="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/points" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/card_rounded"
        android:backgroundTint="@color/colorCard"
        android:gravity="start"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/shop_delete_img"
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/delete" />

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/shop_delete_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ability to delete One ToDo."
                android:textColor="#000000"
                android:textSize="18sp"
                android:typeface="normal" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/shop_delete_btn"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/colorAccent"
                    android:text="Buy"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="206dp"
                    android:layout_height="17dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="10"
                    android:textColor="#FD000000" />

                <ImageView
                    android:id="@+id/imagePoints7"
                    android:layout_width="41dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:elevation="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/points" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_points"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@color/colorPrimary"
        android:clickable="false"
        android:gravity="right|center_vertical"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagePoints"
        android:layout_width="41dp"
        android:layout_height="28dp"
        android:layout_marginEnd="16dp"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/points" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:elevation="5dp"
        android:text="Shop"
        android:textColor="#FDFDFD"
        android:textSize="21sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>